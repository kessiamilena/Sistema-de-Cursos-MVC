@model List<Sitema_de_Cursos_MVC.Models.Curso>

<h2>Cursos</h2>

<a asp-action="Criar" class="btn btn-primary">Novo curso</a>

<table class="table mt-3">
    <tr>
        <th>Nome</th>
        <th>Tipo de Curso</th>
        <th>Quantidade de horas</th>
        <th>Preço calculado</th>
        <th>Ações</th>
    </tr>

    @foreach(var curso in Model) {
        <tr>
            <td>@curso.Nome</td>
            <td>@curso.GetType().Name</td>
            <td>@curso.Horas</td>
            <td>@curso.CalcularPreco()</td>
            <td>
                <a asp-action="Deletar" asp-route-id="@curso.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
    }
</table>